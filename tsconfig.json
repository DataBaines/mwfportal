{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./js/",
      "sourceMap": true,
      "declaration": false,
      "module": "CommonJS",
      "moduleResolution": "node",
      //"emitDecoratorMetadata": true,
      //"experimentalDecorators": true,
      "target": "ES6",
      //"types": ["node"], 
      "esModuleInterop": true, //Required when using tsx (app.tsx)
      "lib": [ "es2017", "dom" ],
      "allowJs": true,
      "typeRoots": [ "./typings", "./node_modules/@types"],
      "jsx": "react"
    },
    "exclude": [
      "node_modules",
      "typings",
      "js",
      "dist",
      "webpack.config.js"]
  }